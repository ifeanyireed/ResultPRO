// This is your Prisma schema file.
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model School {
  id                                String   @id @default(cuid())
  name                              String   @unique
  slug                              String   @unique
  motto                             String?
  logoUrl                           String?  @map("logo_url")
  logoEmoji                         String?  @map("logo_emoji")
  primaryColor                      String?  @map("primary_color")
  secondaryColor                    String?  @map("secondary_color")
  accentColor                       String?  @map("accent_color")
  contactEmail                      String   @unique @map("contact_email")
  contactPhone                      String?  @map("contact_phone")
  contactPersonName                 String?  @map("contact_person_name")
  altContactEmail                   String?  @map("alt_contact_email")
  altContactPhone                   String?  @map("alt_contact_phone")
  fullAddress                       String?  @map("full_address")
  state                             String?
  lga                               String?
  status                            String   @default("PENDING_VERIFICATION")
  verificationStatus                String   @default("NOT_VERIFIED") @map("verification_status")
  verifiedAt                        DateTime? @map("verified_at")
  verifiedBy                        String?  @map("verified_by")
  rejectionReason                   String?  @map("rejection_reason")
  documentVerificationType          String?  @map("document_verification_type")
  documentVerificationUrl           String?  @map("document_verification_url")
  documentVerificationSubmittedAt   DateTime? @map("document_verification_submitted_at")
  onboardingStatus                  String   @default("NOT_STARTED") @map("onboarding_status")
  onboardingCompletedAt             DateTime? @map("onboarding_completed_at")
  currentOnboardingStep             Int      @default(0) @map("current_onboarding_step")
  resultsSetupStatus                String   @default("NOT_STARTED") @map("results_setup_status")
  resultsSetupCompletedAt           DateTime? @map("results_setup_completed_at")
  subscriptionTier                  String?  @map("subscription_tier")
  subscriptionStartDate             DateTime? @map("subscription_start_date")
  subscriptionEndDate               DateTime? @map("subscription_end_date")
  maxStudents                       Int?     @map("max_students")
  maxTeachers                       Int?     @map("max_teachers")
  createdAt                         DateTime @default(now()) @map("created_at")
  updatedAt                         DateTime @updatedAt @map("updated_at")
  deletedAt                         DateTime? @map("deleted_at")

  adminUsers SchoolAdminUser[]
  academicSessions AcademicSession[]
  classes Class[]
  subjects Subject[]
  gradingSystems GradingSystem[]
  grades Grade[]
  onboardingState OnboardingState[]
  payments Payment[]
  subscriptions Subscription[]
  invoices Invoice[] @relation("InvoicesToSchool")
  supportTickets SupportTicket[] @relation("TicketsToSchool")
  resultsSetupSession ResultsSetupSession?
  resultsInstances ResultsInstance[]
  students Student[]
  studentResults StudentResult[] @relation("StudentResultsToSchool")
  scratchCardBatches ScratchCardBatch[] @relation("BatchesToSchool")
  scratchCards ScratchCard[] @relation("CardsToSchool")
  scratchCardUsages ScratchCardUsage[] @relation("UsagesToSchool")
  batchRequests BatchRequest[] @relation("RequestsToSchool")
  parents Parent[]
  agentAssignments AgentSchoolAssignment[]
  referrals Referral[]

  @@index([status])
  @@index([verificationStatus])
  @@map("schools")
}

model ResultsSetupSession {
  id                        String   @id @default(cuid())
  schoolId                  String   @unique @map("school_id")
  currentStep               Int      @default(1) @map("current_step")
  completedSteps            String   @default("[]") @map("completed_steps")  // JSON array as string
  
  // Step 1: Session & Term
  sessionId                 String?  @map("session_id")
  termId                    String?  @map("term_id")
  sessionName               String?  @map("session_name")
  termName                  String?  @map("term_name")
  
  // Step 2: Exam Config
  examConfigComponents      String   @default("[]") @map("exam_config_components")  // JSON array of {name, score, order}
  totalExamScore            Float?   @map("total_exam_score")
  
  // Step 3: Affective Domain
  affectiveTraits           String   @default("[]") @map("affective_traits")  // JSON array of trait names
  
  // Step 4: Psychomotor Domain
  psychomotorSkills         String   @default("[]") @map("psychomotor_skills")  // JSON array of skill names
  
  // Step 5: Staff Uploads
  principalName             String?  @map("principal_name")
  principalSignatureUrl     String?  @map("principal_signature_url")
  principalS3Key            String?  @map("principal_s3_key")
  staffData                 String   @default("[]") @map("staff_data")  // JSON array of {classId, className, teacherName, teacherSignatureUrl}
  
  // Step 6: Assigned Students
  assignedStudents          String   @default("[]") @map("assigned_students")  // JSON array as string
  
  // Step 7: Results CSV
  resultsFileUrl            String?  @map("results_file_url")
  resultsFileName           String?  @map("results_file_name")
  
  createdAt                 DateTime @default(now()) @map("created_at")
  updatedAt                 DateTime @updatedAt @map("updated_at")
  
  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  
  @@map("results_setup_sessions")
}

model ResultsInstance {
  id                        String   @id @default(cuid())
  schoolId                  String   @map("school_id")
  classId                   String   @map("class_id")
  sessionId                 String   @map("session_id")
  termId                    String   @map("term_id")
  
  // Instance metadata
  instanceName              String   @map("instance_name")  // e.g., "Form 4 Term 1 2025/26"
  sessionName               String?  @map("session_name")  // Stored for display (e.g., "2024/2025")
  termName                  String?  @map("term_name")  // Stored for display (e.g., "First Term")
  status                    String   @default("active") @map("status")  // active | archived
  
  // Configuration snapshot (saved at instance creation)
  examConfigComponents      String   @default("[]") @map("exam_config_components")  // JSON array of {name, score}
  affectiveTraits           String   @default("[]") @map("affective_traits")  // JSON array of trait names
  psychomotorSkills         String   @default("[]") @map("psychomotor_skills")  // JSON array of skill names
  
  // CSV storage
  csvFileName               String?  @map("csv_file_name")
  csvFileUrl                String?  @map("csv_file_url")  // S3 or local path for download
  
  // Parsed gradebook data - stored as JSON string
  gradebookData             String   @default("[]") @map("gradebook_data")  // JSON array of parsed student results
  totalStudents             Int      @default(0) @map("total_students")
  
  // Audit trail
  createdAt                 DateTime @default(now()) @map("created_at")
  createdBy                 String?  @map("created_by")  // userId
  updatedAt                 DateTime @updatedAt @map("updated_at")
  archivedAt                DateTime? @map("archived_at")
  archivedBy                String?  @map("archived_by")  // userId
  
  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  class Class @relation(fields: [classId], references: [id], onDelete: Cascade)
  
  // Indexes for querying
  @@index([schoolId])
  @@index([classId])
  @@index([sessionId])
  @@index([termId])
  @@index([status])
  @@map("results_instances")
}

model SchoolAdminUser {
  id                          String   @id @default(cuid())
  schoolId                    String   @map("school_id")
  email                       String   @unique
  firstName                   String?  @map("first_name")
  lastName                    String?  @map("last_name")
  fullName                    String?  @map("full_name")
  passwordHash                String   @map("password_hash")
  passwordResetToken          String?  @map("password_reset_token")
  passwordResetTokenExpiry    DateTime? @map("password_reset_token_expiry")
  role                        String   @default("SCHOOL_ADMIN")
  status                      String   @default("ACTIVE")
  firstLogin                  Boolean  @default(true) @map("first_login")
  lastLoginAt                 DateTime? @map("last_login_at")
  createdAt                   DateTime @default(now()) @map("created_at")
  updatedAt                   DateTime @updatedAt @map("updated_at")
  deletedAt                   DateTime? @map("deleted_at")

  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  @@index([schoolId])
  @@map("school_admin_users")
}

model User {
  id                          String   @id @default(cuid())
  email                       String   @unique
  firstName                   String?  @map("first_name")
  lastName                    String?  @map("last_name")
  fullName                    String?  @map("full_name")
  passwordHash                String   @map("password_hash")
  passwordResetToken          String?  @map("password_reset_token")
  passwordResetTokenExpiry    DateTime? @map("password_reset_token_expiry")
  role                        String   @default("ADMIN")  // SUPER_ADMIN, SUPPORT_AGENT, FINANCE_ADMIN, SUPPORT_ADMIN, PARENT, etc.
  status                      String   @default("ACTIVE")
  firstLogin                  Boolean  @default(true) @map("first_login")
  lastLoginAt                 DateTime? @map("last_login_at")
  createdAt                   DateTime @default(now()) @map("created_at")
  updatedAt                   DateTime @updatedAt @map("updated_at")
  deletedAt                   DateTime? @map("deleted_at")

  parent Parent?
  agent Agent?
  ticketsCreated SupportTicket[] @relation("TicketsCreatedBy")
  ticketsAssigned SupportTicket[] @relation("TicketsAssignedTo")
  messages TicketMessage[] @relation("TicketMessages")
  notifications Notification[] @relation("NotificationsForUser")

  @@index([role])
  @@map("users")
}

model AcademicSession {
  id            String   @id @default(cuid())
  schoolId      String   @map("school_id")
  name          String
  startDate     DateTime @map("start_date")
  endDate       DateTime @map("end_date")
  isActive      Boolean  @default(false) @map("is_active")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  terms Term[]

  @@unique([schoolId, name])
  @@index([schoolId])
  @@map("academic_sessions")
}

model Term {
  id            String   @id @default(cuid())
  sessionId     String   @map("session_id")
  name          String
  startDate     DateTime @map("start_date")
  endDate       DateTime @map("end_date")
  isActive      Boolean  @default(false) @map("is_active")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  session AcademicSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, name])
  @@index([sessionId])
  @@map("terms")
}

model Class {
  id            String   @id @default(cuid())
  schoolId      String   @map("school_id")
  name          String
  level        String
  maxCapacity   Int?     @map("max_capacity")
  classTeacher  String?  @map("class_teacher")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  subjects ClassSubject[]
  students Student[]
  studentResults StudentResult[] @relation("StudentResults")
  resultsInstances ResultsInstance[]

  @@unique([schoolId, name])
  @@index([schoolId])
  @@map("classes")
}

model Student {
  id                String   @id @default(cuid())
  schoolId          String   @map("school_id")
  classId           String   @map("class_id")
  name              String
  admissionNumber   String   @map("admission_number")
  parentEmail       String?  @map("parent_email")
  parentId          String?  @map("parent_id")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  class Class @relation(fields: [classId], references: [id], onDelete: Cascade)
  parent Parent? @relation(fields: [parentId], references: [id], onDelete: SetNull)
  results StudentResult[]

  @@unique([classId, admissionNumber])
  @@index([schoolId])
  @@index([classId])
  @@index([parentId])
  @@map("students")
}

model Parent {
  id                String   @id @default(cuid())
  userId            String   @unique @map("user_id")
  schoolId          String   @map("school_id")
  phoneNumber       String?  @map("phone_number")
  occupation        String?
  address           String?
  city              String?
  state             String?
  country           String?
  notificationPreferences String? @map("notification_preferences") // JSON: { emailNotifications: bool, smsNotifications: bool, ... }
  profilePhotoUrl   String?  @map("profile_photo_url")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  students Student[]

  @@index([userId])
  @@index([schoolId])
  @@map("parents")
}

model Agent {
  id                        String   @id @default(cuid())
  userId                    String   @unique @map("user_id")
  specialization            String   @default("Full-Stack")  // Setup, Training, Maintenance, Full-Stack
  subscriptionTier          String   @default("Free")  // Free, Pro, Premium
  subscriptionStartDate     DateTime? @map("subscription_start_date")
  subscriptionEndDate       DateTime? @map("subscription_end_date")
  bio                       String?
  credentials               String?  // JSON: { certifications: [...], experience: X years, etc }
  avatarUrl                 String?  @map("avatar_url")
  verificationStatus        String   @default("PENDING")  // PENDING, APPROVED, REJECTED
  verifiedAt                DateTime? @map("verified_at")
  verifiedBy                String?  @map("verified_by")  // userId of verifier
  rejectionReason           String?  @map("rejection_reason")
  
  // Referral tracking
  uniqueReferralCode        String   @unique @map("unique_referral_code")
  referralLinkClicks        Int      @default(0) @map("referral_link_clicks")
  
  // Commission tracking
  totalCommissionEarned     Float    @default(0) @map("total_commission_earned")
  pendingCommission         Float    @default(0) @map("pending_commission")
  
  // Gamification
  pointsBalance             Int      @default(0) @map("points_balance")
  lifetimePoints            Int      @default(0) @map("lifetime_points")
  leaderboardRank           Int?     @map("leaderboard_rank")
  
  status                    String   @default("ACTIVE")
  createdAt                 DateTime @default(now()) @map("created_at")
  updatedAt                 DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  schoolAssignments AgentSchoolAssignment[]
  referrals Referral[]
  rewards AgentReward[]
  badges AgentBadge[]
  withdrawals RewardWithdrawal[]

  @@index([userId])
  @@index([verificationStatus])
  @@index([subscriptionTier])
  @@map("agents")
}

model AgentSchoolAssignment {
  id                        String   @id @default(cuid())
  agentId                   String   @map("agent_id")
  schoolId                  String   @map("school_id")
  role                      String   @default("Technical Lead")  // Technical Lead, Support Specialist, Setup Specialist
  commissionRate            Float    @default(7)  // Base commission percentage
  status                    String   @default("ACTIVE")  // ACTIVE, INACTIVE, SUSPENDED
  assignedAt                DateTime @default(now()) @map("assigned_at")
  createdAt                 DateTime @default(now()) @map("created_at")
  updatedAt                 DateTime @updatedAt @map("updated_at")

  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)
  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  @@unique([agentId, schoolId])
  @@index([agentId])
  @@index([schoolId])
  @@map("agent_school_assignments")
}

model Referral {
  id                        String   @id @default(cuid())
  agentId                   String   @map("agent_id")
  referredSchoolId          String   @map("referred_school_id")
  referredByEmail           String   @map("referred_by_email")  // School contact email
  referralCode              String   @map("referral_code")
  
  // Tracking
  clickedAt                 DateTime? @map("clicked_at")
  signupCompletedAt         DateTime? @map("signup_completed_at")
  
  // Commission
  commissionRate            Float    @default(7)
  commissionAmount          Float    @default(0) @map("commission_amount")
  status                    String   @default("PENDING")  // PENDING, APPROVED, PAID
  approvedAt                DateTime? @map("approved_at")
  paidAt                    DateTime? @map("paid_at")
  paymentMethod             String?   @map("payment_method")  // BANK_TRANSFER, PAYPAL, CRYPTOCURRENCY, etc
  
  createdAt                 DateTime @default(now()) @map("created_at")
  updatedAt                 DateTime @updatedAt @map("updated_at")

  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)
  school School @relation(fields: [referredSchoolId], references: [id], onDelete: Cascade)

  @@unique([agentId, referredSchoolId])
  @@index([agentId])
  @@index([referredSchoolId])
  @@index([status])
  @@map("referrals")
}

model AgentReward {
  id                        String   @id @default(cuid())
  agentId                   String   @map("agent_id")
  eventType                 String   // SCHOOL_SIGNUP, MONTHLY_BONUS, MILESTONE, CUSTOM
  pointsEarned              Int      @default(0) @map("points_earned")
  description               String?
  metadata                  String?   // JSON: { schoolId, amount, reason, etc }
  
  createdAt                 DateTime @default(now()) @map("created_at")

  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@index([agentId])
  @@index([eventType])
  @@map("agent_rewards")
}

model AgentBadge {
  id                        String   @id @default(cuid())
  agentId                   String   @map("agent_id")
  badgeType                 String   // FIRST_SCHOOL, SCHOOL_BUILDER, TOP_PERFORMER, TRUSTED_EXPERT, AMBASSADOR, etc
  description               String?
  iconUrl                   String?   @map("icon_url")
  earnedAt                  DateTime @default(now()) @map("earned_at")
  
  createdAt                 DateTime @default(now()) @map("created_at")

  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@unique([agentId, badgeType])
  @@index([agentId])
  @@map("agent_badges")
}

model RewardWithdrawal {
  id                        String   @id @default(cuid())
  agentId                   String   @map("agent_id")
  amount                    Float
  status                    String   @default("PENDING")  // PENDING, APPROVED, REJECTED, PAID
  paymentMethod             String   @map("payment_method")  // BANK_TRANSFER, PAYPAL, CRYPTOCURRENCY
  
  // Bank details
  bankAccountName           String?   @map("bank_account_name")
  bankCode                  String?   @map("bank_code")
  accountNumber             String?   @map("account_number")
  
  // Crypto details
  walletAddress             String?   @map("wallet_address")
  
  notes                     String?
  rejectionReason           String?   @map("rejection_reason")
  
  requestedAt               DateTime @default(now()) @map("requested_at")
  approvedAt                DateTime? @map("approved_at")
  approvedBy                String?   @map("approved_by")  // userId
  paidAt                    DateTime? @map("paid_at")
  txHash                    String?   @map("tx_hash")  // Transaction hash for tracking
  
  createdAt                 DateTime @default(now()) @map("created_at")
  updatedAt                 DateTime @updatedAt @map("updated_at")

  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@index([agentId])
  @@index([status])
  @@map("reward_withdrawals")
}

model Subject {
  id            String   @id @default(cuid())
  schoolId      String   @map("school_id")
  name          String
  code          String
  description   String?
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  classes ClassSubject[]
  grades Grade[]

  @@unique([schoolId, code])
  @@index([schoolId])
  @@map("subjects")
}

model ClassSubject {
  id            String   @id @default(cuid())
  classId       String   @map("class_id")
  subjectId     String   @map("subject_id")
  createdAt     DateTime @default(now()) @map("created_at")

  class Class @relation(fields: [classId], references: [id], onDelete: Cascade)
  subject Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  @@unique([classId, subjectId])
  @@index([classId])
  @@index([subjectId])
  @@map("class_subjects")
}

model GradingSystem {
  id            String   @id @default(cuid())
  schoolId      String   @map("school_id")
  name          String
  description   String?
  isDefault     Boolean  @default(false) @map("is_default")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  grades Grade[]

  @@unique([schoolId, name])
  @@index([schoolId])
  @@map("grading_systems")
}

model Grade {
  id            String   @id @default(cuid())
  schoolId      String   @map("school_id")
  subjectId     String?  @map("subject_id")
  gradingSystemId String  @map("grading_system_id")
  gradeName     String   @map("grade_name")
  minScore      Float    @map("min_score")
  maxScore      Float    @map("max_score")
  description   String?
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  subject Subject? @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  gradingSystem GradingSystem @relation(fields: [gradingSystemId], references: [id], onDelete: Cascade)

  @@unique([gradingSystemId, gradeName])
  @@index([schoolId])
  @@index([subjectId])
  @@index([gradingSystemId])
  @@map("grades")
}

model StudentResult {
  id                    String   @id @default(cuid())
  schoolId              String   @map("school_id")
  classId               String   @map("class_id")
  sessionId             String   @map("session_id")
  termId                String   @map("term_id")
  studentId             String   @map("student_id")
  studentName           String   @map("student_name")

  // Subject results - stored as JSON string: { "English": { ca1, ca2, project, exam, total, grade, classAverage, positionInClass, remark } }
  subjectResults        String   @map("subject_results")

  // Student personal info from CSV
  sex                   String?
  dateOfBirth           String?  @map("date_of_birth")
  age                   Int?
  height                String?
  weight                String?
  favouriteColor        String?  @map("favourite_color")

  // Attendance
  daysPresent           Int      @map("days_present")
  daysSchoolOpen        Int      @map("days_school_open")

  // Affective domain - stored as JSON string: { "Attentiveness": 4, "Honesty": 5, ... }
  affectiveDomain       String?  @map("affective_domain")

  // Psychomotor domain - stored as JSON string: { "Handling of Tools": 4, "Drawing": 3, ... }
  psychomotorDomain     String?  @map("psychomotor_domain")

  // Comments
  principalComments     String?  @map("principal_comments")
  classTeacherComments  String?  @map("class_teacher_comments")

  // Overall metrics
  overallAverage        Float?   @map("overall_average")
  overallPosition       Int?     @map("overall_position")
  overallRemark         String?  @map("overall_remark")

  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")

  school School @relation("StudentResultsToSchool", fields: [schoolId], references: [id], onDelete: Cascade)
  class Class @relation("StudentResults", fields: [classId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([schoolId, classId, sessionId, termId, studentId])
  @@index([schoolId])
  @@index([classId])
  @@index([sessionId])
  @@index([studentId])
  @@map("student_results")
}

model OnboardingState {
  id            String   @id @default(cuid())
  schoolId      String   @unique @map("school_id")
  completedSteps String? @map("completed_steps")
  currentStep   Int     @default(1) @map("current_step")
  isComplete    Boolean @default(false) @map("is_complete")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  @@index([schoolId])
  @@map("onboarding_states")
}

model Plan {
  id                String   @id @default(cuid())
  name              String   @unique
  priceNGN          Float    @map("price_ngn")
  priceUSD          Float    @map("price_usd")
  maxStudents       Int      @map("max_students")
  maxTeachers       Int      @map("max_teachers")
  storageGB         Int      @map("storage_gb")
  features          String   @map("features") // JSON string of features array
  isPopular         Boolean  @default(false) @map("is_popular")
  isActive          Boolean  @default(true) @map("is_active")
  displayOrder      Int      @default(0) @map("display_order")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  payments Payment[]
  subscriptions Subscription[]
  invoices Invoice[] @relation("InvoicesToPlan")

  @@index([name])
  @@map("plans")
}

model Subscription {
  id            String   @id @default(cuid())
  schoolId      String   @map("school_id")
  planId        String   @map("plan_id")
  status        String   @default("ACTIVE") @map("status") // ACTIVE, EXPIRED, CANCELLED
  startDate     DateTime @default(now()) @map("start_date")
  endDate       DateTime? @map("end_date")
  isAutoRenew   Boolean  @default(true) @map("is_auto_renew")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  plan Plan @relation(fields: [planId], references: [id])

  @@unique([schoolId, planId])
  @@index([schoolId])
  @@index([status])
  @@map("subscriptions")
}

model Payment {
  id                  String   @id @default(cuid())
  schoolId            String   @map("school_id")
  planId              String   @map("plan_id")
  amount              Float    @map("amount")
  currency            String   @default("NGN") @map("currency")
  status              String   @default("PENDING") @map("status") // PENDING, PROCESSING, COMPLETED, FAILED
  billingPeriod       String   @default("term") @map("billing_period") // term or year
  paystackReference   String?  @unique @map("paystack_reference")
  paystackAccessCode  String?  @map("paystack_access_code")
  paystackAuthUrl     String?  @map("paystack_auth_url")
  transactionId       String?  @unique @map("transaction_id")
  paidAt              DateTime? @map("paid_at")
  expiresAt           DateTime? @map("expires_at")
  errorMessage        String?  @map("error_message")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  plan Plan @relation(fields: [planId], references: [id])
  invoices Invoice[]

  @@index([schoolId])
  @@index([status])
  @@index([paystackReference])
  @@map("payments")
}

model Invoice {
  id                  String   @id @default(cuid())
  invoiceNumber       String   @unique @map("invoice_number")
  schoolId            String   @map("school_id")
  paymentId           String   @map("payment_id")
  planId              String   @map("plan_id")
  
  // Billing period
  billingPeriod       String   @map("billing_period") // term or year
  periodStartDate     DateTime @map("period_start_date")
  periodEndDate       DateTime @map("period_end_date")
  
  // Amount details
  baseAmount          Float    @map("base_amount")
  taxAmount           Float    @map("tax_amount")
  totalAmount         Float    @map("total_amount")
  currency            String   @default("NGN") @map("currency")
  
  // Invoice status
  status              String   @default("ISSUED") @map("status") // ISSUED, PAID, OVERDUE, CANCELLED
  
  // Payment tracking
  paidAt              DateTime? @map("paid_at")
  dueDate             DateTime? @map("due_date")
  
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  school School @relation("InvoicesToSchool", fields: [schoolId], references: [id], onDelete: Cascade)
  payment Payment @relation(fields: [paymentId], references: [id], onDelete: Cascade)
  plan Plan @relation("InvoicesToPlan", fields: [planId], references: [id])

  @@index([schoolId])
  @@index([status])
  @@index([paymentId])
  @@map("invoices")
}

// ============================================================================
// SCRATCH CARD MODELS
// ============================================================================

model ScratchCardBatch {
  id                String   @id @default(cuid())
  batchCode         String   @unique  // e.g., "SCB-2026-001"
  schoolId          String   @map("school_id")
  quantity          Int      // Total cards in batch
  generated         DateTime @default(now())
  
  // Assignment & Activation
  assignedAt        DateTime? @map("assigned_at")
  assignedBy        String?   @map("assigned_by")  // SuperAdmin ID
  activatedAt       DateTime? @map("activated_at")
  activatedBy       String?   @map("activated_by")
  deactivatedAt     DateTime? @map("deactivated_at")
  
  // Status tracking
  status            String   @default("PENDING")  // PENDING | ASSIGNED | ACTIVE | DEPLETED | DEACTIVATED
  
  // Usage statistics
  usedCount         Int      @default(0) @map("used_count")
  deactivatedCount  Int      @default(0) @map("deactivated_count")
  
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  
  school School @relation("BatchesToSchool", fields: [schoolId], references: [id], onDelete: Cascade)
  cards ScratchCard[]
  requestHistory BatchRequest[]
  
  @@index([schoolId])
  @@index([status])
  @@map("scratch_card_batches")
}

model ScratchCard {
  id                String   @id @default(cuid())
  batchId           String   @map("batch_id")
  schoolId          String   @map("school_id")
  pin               String   @unique  // Unique PIN code
  
  // Usage tracking
  usesRemaining     Int      @default(3) @map("uses_remaining")
  usageCount        Int      @default(0) @map("usage_count")
  lastUsedAt        DateTime? @map("last_used_at")
  usedByEmail       String?  @map("used_by_email")
  
  // Activation control
  isActive          Boolean  @default(true) @map("is_active")
  activatedAt       DateTime? @map("activated_at")
  deactivatedAt     DateTime? @map("deactivated_at")
  deactivationReason String? @map("deactivation_reason")
  
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  
  batch ScratchCardBatch @relation(fields: [batchId], references: [id], onDelete: Cascade)
  school School @relation("CardsToSchool", fields: [schoolId], references: [id], onDelete: Cascade)
  usageHistory ScratchCardUsage[]
  
  @@index([batchId])
  @@index([schoolId])
  @@index([isActive])
  @@map("scratch_cards")
}

model ScratchCardUsage {
  id                String   @id @default(cuid())
  cardId            String   @map("card_id")
  schoolId          String   @map("school_id")
  
  // What was accessed
  studentAdmissionNumber String @map("student_admission_number")
  sessionId         String?  @map("session_id")
  termId            String?  @map("term_id")
  
  // Who used it
  usedByEmail       String   @map("used_by_email")
  usedByIpAddress   String?  @map("used_by_ip_address")
  
  usedAt            DateTime @default(now()) @map("used_at")
  
  card ScratchCard @relation(fields: [cardId], references: [id], onDelete: Cascade)
  school School @relation("UsagesToSchool", fields: [schoolId], references: [id], onDelete: Cascade)
  
  @@index([cardId])
  @@index([schoolId])
  @@index([usedAt])
  @@map("scratch_card_usages")
}

model BatchRequest {
  id                String   @id @default(cuid())
  batchId           String?  @map("batch_id")
  schoolId          String   @map("school_id")
  schoolAdminId     String   @map("school_admin_id")
  
  // Request details
  quantity          Int      // How many cards requested
  reason            String?  // Why they need them
  
  // Status tracking
  status            String   @default("PENDING")  // PENDING | APPROVED | REJECTED | DELIVERED
  requestedAt       DateTime @default(now()) @map("requested_at")
  approvedAt        DateTime? @map("approved_at")
  approvedBy        String?   @map("approved_by")  // SuperAdmin ID
  deliveredAt       DateTime? @map("delivered_at")
  rejectionReason   String?  @map("rejection_reason")
  
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  
  batch ScratchCardBatch? @relation(fields: [batchId], references: [id], onDelete: SetNull)
  school School @relation("RequestsToSchool", fields: [schoolId], references: [id], onDelete: Cascade)
  
  @@index([schoolId])
  @@index([status])
  @@map("batch_requests")
}

// Support Ticket System Models
model SupportTicket {
  id                    String   @id @default(cuid())
  ticketNumber          String   @unique @map("ticket_number")  // e.g., TICKET-001
  schoolId              String?  @map("school_id")
  createdBy             String   @map("created_by")  // User ID who created
  assignedToAgent       String?  @map("assigned_to_agent")  // Support Agent ID
  
  // Ticket details
  title                 String
  description           String
  category              String   // BILLING, TECHNICAL, ACCOUNT, FEATURE_REQUEST, OTHER
  priority              String   @default("MEDIUM")  // LOW, MEDIUM, HIGH, CRITICAL
  status                String   @default("OPEN")  // OPEN, PENDING, IN_PROGRESS, RESOLVED, CLOSED
  
  // Metadata
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")
  resolvedAt            DateTime? @map("resolved_at")
  closedAt              DateTime? @map("closed_at")
  
  school School? @relation("TicketsToSchool", fields: [schoolId], references: [id], onDelete: SetNull)
  createdByUser User @relation("TicketsCreatedBy", fields: [createdBy], references: [id], onDelete: Cascade)
  assignedAgent User? @relation("TicketsAssignedTo", fields: [assignedToAgent], references: [id], onDelete: SetNull)
  messages TicketMessage[]
  notifications Notification[]
  
  @@index([schoolId])
  @@index([assignedToAgent])
  @@index([status])
  @@index([priority])
  @@index([createdBy])
  @@map("support_tickets")
}

model TicketMessage {
  id                String   @id @default(cuid())
  ticketId          String   @map("ticket_id")
  senderId          String   @map("sender_id")
  content           String
  attachmentUrl     String?  @map("attachment_url")
  
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  
  ticket SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  sender User @relation("TicketMessages", fields: [senderId], references: [id], onDelete: Cascade)
  
  @@index([ticketId])
  @@index([senderId])
  @@index([createdAt])
  @@map("ticket_messages")
}

model Notification {
  id                String   @id @default(cuid())
  userId            String   @map("user_id")
  ticketId          String?  @map("ticket_id")
  type              String   // TICKET_CREATED, TICKET_ASSIGNED, MESSAGE_RECEIVED, TICKET_RESOLVED, STATUS_CHANGED
  title             String
  message           String
  relatedId         String?  @map("related_id")  // ID of related entity (ticketId, etc.)
  isRead            Boolean  @default(false) @map("is_read")
  actionUrl         String?  @map("action_url")
  
  createdAt         DateTime @default(now()) @map("created_at")
  readAt            DateTime? @map("read_at")
  
  user User @relation("NotificationsForUser", fields: [userId], references: [id], onDelete: Cascade)
  ticket SupportTicket? @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
  @@map("notifications")
}
