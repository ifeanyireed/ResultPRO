# Environment
NODE_ENV=development

# Server
PORT=5000
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:8080

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=resultspro_db

# JWT
JWT_SECRET=your_jwt_secret_key_change_in_production_min_32_chars
JWT_REFRESH_SECRET=your_refresh_secret_key_change_in_production_min_32_chars
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Email
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_NAME=Results Pro
MAIL_FROM_EMAIL=noreply@resultspro.ng

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
