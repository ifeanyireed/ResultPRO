# Environment Setup for Production on AWS EC2

# ============================================================
# ENVIRONMENT & SERVER
# ============================================================
NODE_ENV=production
PORT=5000
API_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# ============================================================
# DATABASE - MySQL on EC2
# ============================================================
# Replace with your EC2 instance IP and credentials
DB_HOST=192.168.1.100
DB_PORT=3306
DB_USER=resultspro_user
DB_PASSWORD=strong_secure_password_min_16_chars_12345678
DB_NAME=resultspro_db

# ============================================================
# JWT AUTHENTICATION
# ============================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate_secure_32_char_secret_here_from_crypto_randomBytes_32_hex_output
JWT_REFRESH_SECRET=generate_secure_32_char_refresh_secret_here_from_crypto_randomBytes_32_hex
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# ============================================================
# EMAIL SERVICE - Hostinger SMTP
# ============================================================
MAIL_SERVICE=smtp
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=587
MAIL_USER=resultspro@scholars.ng
MAIL_PASSWORD=*Reedb4b4
MAIL_FROM_NAME=Results Pro
MAIL_FROM_EMAIL=resultspro@scholars.ng

# ============================================================
# AWS (Optional - for future use)
# ============================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# ============================================================
# TWILIO SMS (Optional - for OTP verification)
# ============================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================================
# REDIS (Optional - for caching/sessions)
# ============================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/resultspro
